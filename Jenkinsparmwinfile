pipeline {
    agent any

    environment {
       PATH = "C:\\WINDOWS\\SYSTEM32;C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\"
    }

    parameters {
        string(name: 'Greeting', defaultValue: 'Hello', description: 'How should I greet the world?')
        choice(choices: 'yes\nno', description: 'Are you sure you want to execute this test?', name: 'run_test_only')
    }
    
    stages {
  
        stage('Build') {
            steps {
                echo 'Building..'
                echo "${params.Greeting} World! "
            }
        }
        stage('Windows script') {
            steps {
                echo 'Running Windows batch script..'
                bat 'set'
                powershell '''
                . ".\\actrun.ps1" -ActIP 10.65.5.35 -ActUser admin -ActPass $ActPass
                '''
            }
        }
    }
    post {
      always {
        echo 'I have finished running this job'
        // deleteDir() /* clean up our workspace */
        }
    }
}
