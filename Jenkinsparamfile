pipeline {
    agent any

    parameters {
        string(name: 'Greeting', defaultValue: 'Hello', description: 'How should I greet the world?')
        string(name: 'project_name', defaultValue: 'Proj1', description: 'Project Name?')
        choice(choices: 'yes\nno', description: 'Are you sure you want to execute this test?', name: 'run_test_only')
    }
    
    stages {
        stage('Init') {
            steps {
                echo 'Initializing..'
                sh 'pwd'      // /var/lib/jenkins/
                sh 'id'       // uid=
                sh 'uname -a' // Linux 
            }
        }    
        stage('Build') {
            steps {
                echo 'Building..'
                echo "${params.Greeting} World!"
            }
        }
        stage('Shell script') {
            steps {
                echo 'Running shell script..'
                sh '''#!/usr/bin/env bash
                    set -o errexit
                    set -o nounset
                    set -o pipefail
                    set -o xtrace
                    hostname
                    whoami
                    set
                    scp root@syd-ora12-1:/home/oracle/mountdb.sh /var/tmp/back
                '''
                script {
                  timeout(time: 10, unit: 'MINUTES') {
                  input(id: "Proceed", message: "Deploy ${params.project_name}?", ok: 'Deploy')
                  }
                }
                echo "Proceed = ${Proceed} "
                echo "Proceed = ${Proceed} "
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                script{
                    if (env.run_test_only =='yes') {
                        echo 'Running the Test..'
                    } else {
                        echo 'Sorry, I am not running the Test..'
                    }
                  }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
    post {
      always {
        echo 'I have finished running this job'
        deleteDir() /* clean up our workspace */
        }
    }
}
