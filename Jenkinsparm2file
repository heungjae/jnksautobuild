pipeline {
    agent any

    parameters {
        string(name: 'Greeting', defaultValue: 'Hello', description: 'How should I greet the world?')
        choice(choices: 'yes\nno', description: 'Are you sure you want to execute this test?', name: 'run_test_only')
    }
    
    stages {
  
        stage('Build') {
            steps {
                echo 'Building..'
                echo "${params.Greeting} World! "
            }
        }
        stage('Shell script') {
            steps {
                echo 'Running shell script..'
                sh 'chmod 0755 ./hello.sh'
                sh "./hello.sh ${params.Greeting}"
                sh 'ssh -i /Users/michael/.ssh/id_rsa-sybase sybase@10.65.5.35 "udsinfo lsversion"'
                
                sh("""echo '7' > ssh -o StrictHostKeyChecking=no -i /Users/michael/.ssh/id_rsa-sybase sybase@10.65.5.35 << EOF
                dday=\$1;
                udsinfo lsversion;
                reportimages -d \$dday; 
                reportpools;
                exit
                EOF""") 
                
                sh '''#!/usr/bin/env bash
                    set -o errexit
                    set -o nounset
                    set -o pipefail
                    set -o xtrace
                    hostname
                    whoami
                    set
                '''
            }
        }
    }
    post {
      always {
        echo 'I have finished running this job'
        // deleteDir() /* clean up our workspace */
        }
    }
}
